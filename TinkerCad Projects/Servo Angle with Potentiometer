// C++ code
#include <Servo.h>
Servo s1;
int pot= A0;
 int curAngle=0;
void setup()
{
  pinMode(pot,INPUT);
	s1.attach(9);
    s1.write(0);
 
  Serial.begin(9600);
}
void loop()
{
  int potval = analogRead(pot);
  Serial.print("Pot value: ");
  Serial.println(potval);
  int angle=map(potval,0,1023,0,180);
  Serial.print("Mapped angle: ");
  Serial.println(angle);
 	
  if(angle>curAngle){
    for(int i=curAngle;i<=angle;i++){
  		s1.write(i);
        delay(10);
      curAngle+=1;
    }
  }
  else if(angle<=curAngle){
         for(int i=curAngle;i>=angle;i--){
  		s1.write(i);
        delay(10);
      curAngle-=1; 
    }
    }
  }
